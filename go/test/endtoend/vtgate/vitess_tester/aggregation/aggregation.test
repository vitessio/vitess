CREATE TABLE `t1`
(
    `id`   int unsigned NOT NULL AUTO_INCREMENT,
    `name` varchar(191) NOT NULL,
    PRIMARY KEY (`id`)
) ENGINE InnoDB,
  CHARSET utf8mb4,
  COLLATE utf8mb4_unicode_ci;

CREATE TABLE `t2`
(
    `id`    bigint unsigned NOT NULL AUTO_INCREMENT,
    `t1_id` int unsigned NOT NULL,
    PRIMARY KEY (`id`)
) ENGINE InnoDB,
  CHARSET utf8mb4,
  COLLATE utf8mb4_unicode_ci;

CREATE TABLE `t3`
(
    `id`   bigint unsigned NOT NULL AUTO_INCREMENT,
    `name` varchar(191) NOT NULL,
    PRIMARY KEY (`id`)
) ENGINE InnoDB,
  CHARSET utf8mb4,
  COLLATE utf8mb4_unicode_ci;

